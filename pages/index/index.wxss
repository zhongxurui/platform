.marquee_text {
  display: block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 10s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
  color: gold;
  font-size: 30rpx;
  line-height: 70rpx;
  font-weight: 200;
  text-align: center;
  width: 100%;
  position: absolute;
  top: 0;
}

@keyframes around {
  from {
    left: 110%;
  }

  to {
    left: -110%;
  }
}

