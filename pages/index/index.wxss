.secretary {
  width: 200rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
  top: 350rpx;
}

.secretary_image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  z-index: 1;
  position: absolute;
  overflow: hidden;
  top: 50%;
  margin-top: -35rpx;
  margin-left: 10rpx;
  border: 3px solid white;
  -webkit-animation-name: 'ripple'; /*动画属性名，也就是我们前面keyframes定义的动画名*/
  -webkit-animation-duration: 1s; /*动画持续时间*/
  -webkit-animation-iteration-count: infinite; /*定义循环资料，infinite为无限次*/
  -webkit-animation-direction: alternate; /*定义动画方式*/
}

.secretary_image image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.secretary_name {
  width: 120rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  margin-top: -25rpx;
  right: 0;
  border: 2px solid white;
  border-left: 0px;
  border-right: 0px;
  background-color: #2484c1;
  text-align: center;
}

.secretary_name text {
  display: block;
  line-height: 50rpx;
  font-size: 22rpx;
  color: white;
  margin-left: 10rpx;
}

.secretary button {
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}

@keyframes ripple {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(20deg);
  }

  100% {
    transform: rotate(0deg);
  }
}

