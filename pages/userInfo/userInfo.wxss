/* pages/userInfo/userInfo.wxss */

page {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.body {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    background-color: #ededed;
}

.uesrINfo {
    width: 100%;
    height: 150rpx;
    position: relative;
    background-color: #5876f1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 60rpx;
    padding-top: 30rpx;
}

.uesrINfo .userInfo_header {
    width: 150rpx;
    height: 150rpx;
    position: relative;
    border: 3px solid white;
    border-radius: 50%;
    overflow: hidden;
}

.uesrINfo .userInfo_info {
    width: 280rpx;
    height: 150rpx;
    position: relative;
    margin-left: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.uesrINfo .userInfo_info text {
    display: block;
    width: 100%;
    height: 50rpx;
    text-align: left;
    line-height: 50rpx;
    font-size: 30rpx;
    color: white;
}

.uesrINfo .userSet {
    width: 200rpx;
    height: 150rpx;
    position: relative;
    margin-left: 20rpx;
    margin-top: 40rpx;
}

.uesrINfo .userSet .setbtn {
    width: 180rpx;
    height: 56rpx;
    position: absolute;
    top: 0;
    right: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 30rpx;
    background-color: #4da9f7;
}

.uesrINfo .userSet .setbtn text {
    color: white;
    font-size: 30rpx;
    position: relative;
    margin-left: 10rpx;
}



.userRink {
    width: 100%;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
}

.userRink .rink {
    width: 33.3%;
    height: 100%;
    position: relative;
    border-right: 1rpx solid rgba(0, 0, 0, 0.2);
}

.userRink .rink text {
    display: block;
    position: relative;
    text-align: center;
    line-height: 100rpx;
}

.duihuanjilu {
    width: 100%;
    height: auto;
    position: relative;
    margin-top: 20rpx;
}

.duihuanjilu .jilutitle {
    position: relative;
    width: 100%;
    height: 80rpx;
    background-color: white;
}

.duihuanjilu .jilutitle text {
    display: block;
    float: left;
    text-align: left;
    margin-left: 20rpx;
    width: 300rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #469be4;
}

.duihuanjilu .jilutitle view {
    display: block;
    float: right;
    position: relative;
    width: 186rpx;
    height: 49rpx;
    top: 15.5rpx;
    right: 10rpx;
}
.duihuanjilu .jilutitle view image {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
}
.duihuanjilu .jilu {
    width: 100%;
    height: 100rpx;
    position: relative;
    margin-top: 2rpx;
    background-color: white; 
}
.duihuanjilu .jilu .jiluInfo {
    display: block;
    width: 400rpx;
    height: 100rpx;
    position: relative;
    float: left;
    font-size: 30rpx;
    font-weight: 400;
}
.duihuanjilu .jilu .jiluInfo text {
    display: block;
    height: 50rpx;
    width: 100%;
    margin-left: 20rpx;
    line-height: 50rpx;
}
.duihuanjilu .jilu .jilugold {
    width: 200rpx;
    height: 100rpx;
    position: relative;
    float: right;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #e45110;
}
 .getmoregame {
    position: relative;
    width: 100%;
    height: 150rpx;
    font-size: 40rpx;
    color: #3680d3;
}

 .getmoregame .gettitle {
    width: 200rpx;
    height: 50rpx;
    position: relative;
    text-align: center;
    border-radius: 50rpx;
    border: 1px solid #379fff;
    margin: 0 auto;
    margin-top: 20rpx;
}

 .getmoregame .gettitle text {
    display: block;
    line-height: 50rpx;
    font-size: 25rpx;
}
