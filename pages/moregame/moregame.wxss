/* pages/moregame/moregame.wxss */
@import '../temp/temp.wxss';
.moregame {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    background-color: #ededed;
}

page {
    width: 100%;
    height: 100%;
    position: relative;
}

.topbanner {
    width: 100%;
    height: 80rpx;
    position: relative;
    /* top: 0; */
    background-color: white;
}

.topbanner .gold {
    width: 200rpx;
    height: 80rpx;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
}

.topbanner .gold view {
    width: 100rpx;
    height: 80rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.topbanner .gold view image {
    width: 47rpx;
    height: 47rpx;
}

.topbanner .gold view text {
    width: 100%;
    height: 100%;
    display: block;
    line-height: 80rpx;
    font-size: 35rpx;
    color: #469be4;
}

.topbanner .duihuan {
    float: right;
    display: block;
    margin-top: 18rpx;
    margin-right: 18rpx;
    width: 160rpx;
    height: 44rpx;
    position: relative;
    text-align: center;
    background-color: #ffdf47;
    border-radius: 16rpx;
  color: #a28222;
}

.topbanner .duihuan text {
    font-size: 28rpx;
    color: white;
    display: block;
    line-height: 44rpx;
}

.daytask {
    width: 100%;
    position: relative;
    margin-top: 30rpx;
}

.daytask view {
    position: relative;
    margin-top: 3rpx;
    width: 100%;
    height: 90rpx;
}

.daytask .task_title {
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}

.daytask .task_title image {
    width: 315rpx;
    height: 43rpx;
    position: relative;
}

.daytask .daytask_1 {
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    /* border: 1px outset red; */
}

.daytask .daytask_1 .taskname {
    position: relative;
    display: block;
    text-align: left;
    font-size: 30rpx;
    width: 200rpx;
    padding-left: 10rpx;
}

.daytask .daytask_1 .taskname .tasksign {
    position: absolute;
    width: 120rpx;
    height: 50rpx;
    left: 50%;
    top: 50%;
    margin-left: -50rpx;
    margin-top: -25rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 25rpx;
    border-radius: 18rpx;
}

.daytask .gameitem {
    width: 100%;
    height: 160rpx;
    margin-top: 3rpx;
    background-color: white;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.daytask .gameitem .gameheader {
    width: 130rpx;
    height: 130rpx;
    position: relative;
    border-radius: 20rpx;
    overflow: hidden;
}

.daytask .gameitem .gameheader  image {
    width: 100%;
    height: 100%;
    position: relative;
    border-radius: 20rpx;
}

.daytask .gameitem .gameinfo {
    width: 415rpx;
    height: 140rpx;
    position: relative;
    margin-left: 20rpx;
}

.daytask .gameitem .gameinfo .gamename {
    display: block;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #3680d3;
}

.daytask .gameitem .gameinfo .gamedesc {
    display: block;
    line-height: 40rpx;
    font-size: 25rpx;
    color: #bbb;
    margin-top: 5rpx;
}

.daytask .gameitem .gameinfo .gameaward {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
    color: #3680d3;
    margin-top: 5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.daytask .gameitem .gameinfo .gameaward .awardinfo {
    width: 335rpx;
    margin-left: 10rpx;
    height: 40rpx;
}

.daytask .gameitem .gameinfo .allaward {
    display: block;
    border-radius: 10rpx;
    width: 70rpx;
    text-align: center;
    background-color: #ffdf47;
    color: #a28222;
}

.daytask .gameitem .gamebtn {
    width: 150rpx;
    height: 140rpx;
    position: relative;
}

.daytask .gameitem .gamebtn view {
    width: 140rpx;
    height: 50rpx;
    margin-left: 15rpx;
    border-radius: 20rpx;
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 25rpx;
    color: white;
}

.daytask .getmoregame {
    position: relative;
    width: 100%;
    height: 150rpx;
    font-size: 40rpx;
    color: #3680d3;
}

.daytask .getmoregame .gettitle {
    width: 400rpx;
    height: 80rpx;
    position: relative;
    text-align: center;
    border-radius: 50rpx;
    border: 3px solid #379fff;
    margin: 0 auto;
    margin-top: 20rpx;
}

.daytask .getmoregame .gettitle text {
    display: block;
    line-height: 80rpx;
}

.signBody {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    opacity: 0;
}

.signBody .bg {
    width: 100%;
    height: 100%;
    top: 0;
    background-color: rgba(0, 0, 0, 0.3);
    position: absolute;
}

.signBody .sign {
    width: 650rpx;
    height: 800rpx;
    position: absolute;
    left: 50%;
    top: 10%;
    margin-left: -325rpx;
    /* border: 1px outset red; */
    border-radius: 20rpx;
    background-color: white;
}

.signBody .sign .title {
    width: 100%;
    height: 80rpx;
    position: relative;
    display: block;
    text-align: center;
    line-height: 80rpx;
    color: #469be4;
    font-size: 40rpx;
    margin-top: 10rpx;
}

.signBody .sign .tips {
    width: 100%;
    height: 60rpx;
    position: relative;
    display: block;
    text-align: center;
    line-height: 60rpx;
    color: #e85f72;
    font-size: 28rpx;
}

.signBody .sign .signInfo {
    width: 100%;
    height: 460rpx;
    position: relative;
    margin-top: 10rpx;
    /* border: 1px solid red; */
    background-color: #ededed;
}

.signBody .sign .signInfo .signItem {
    width: 137.5rpx;
    height: 200rpx;
    position: relative;
    background-color: white;
    border-radius: 15rpx;
    /* left: 20rpx;
    top: 20rpx; */
    float: left;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.signBody .sign .signInfo .signItem image {
    width: 137.5rpx;
    height: 137.5rpx;
    position: relative;
    margin-top: -10rpx;
}

.signBody .sign .signInfo .signItem .goldnum {
    width: 130rpx;
    height: 40rpx;
    position: absolute;
    bottom: 4rpx;
    left: 50%;
    border-radius: 8rpx;
    margin-left: -65rpx;
    background: #ededed;
    display: flex;
    align-items: center;
    justify-content: center;
}

.signBody .sign .signInfo .signItem .goldnum text {
    display: block;
    color: #e85f72;
    font-size: 25rpx;
}

.item_num {
    width: 100%;
    height: 40rpx;
    display: block;
    text-align: center;
    line-height: 40rpx;
    color: #e85f72;
    font-size: 25rpx;
    position: relative;
    margin-top: 10rpx;
}

.signBody .sign .signInfo .signItem_7 {
    width: 295rpx;
    height: 200rpx;
    position: relative;
    background-color: white;
    border-radius: 15rpx;
    float: left;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.signBody .sign .signInfo .signItem_7 image {
    width: 259rpx;
    height: 133rpx;
    position: relative;
    margin: 0 auto;
    display: block;
}

.signBody .sign .signInfo .signItem_7 .goldnum {
    width: 280rpx;
    height: 40rpx;
    position: absolute;
    bottom: 4rpx;
    left: 50%;
    border-radius: 8rpx;
    margin-left: -140rpx;
    background: #ededed;
    display: flex;
    align-items: center;
    justify-content: center;
}

.signBody .sign .signInfo .signItem_7 .goldnum text {
    display: block;
    color: #e85f72;
    font-size: 25rpx;
}

.signBody .sign .signbtn {
    width: 400rpx;
    height: 80rpx;
    position: relative;
    margin: 0 auto;
    margin-top: 30rpx;
    border-radius: 20rpx;
    background-color: #29b0ef;
    color: white;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
    display: block;
}
