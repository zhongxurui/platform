/* pages/temp/temp.wxss */

.share_tmp {
    width: 100%;
    height: 100%;
    position: absolute;
    top:0;
    background-color: rgba(0, 0, 0, 0.2);
}
.share_tmp_info {
    width: 500rpx;
    height: 300rpx;
    position: relative;
    margin: 0 auto;
    margin-top: 40%;
    background-color: white;
    border-radius: 10rpx;
}
.share_tmp_info text {
    display: block;
    font-size: 35rpx;
    text-align: center;
    color: black;
    position: relative;
    top: 60rpx;
}
.btn_tmp {
    width: 100%;
    height: 60rpx;
    position: absolute;
    border-top: 1px solid #ededed;
    display: flex;
    align-items: center;
    justify-content: center;
    bottom: 10rpx;
}
.btn_tmp view {
    width: 250rpx;
    height: 60rpx;
    position: relative;
    border-right: 1px solid #ededed;
    text-align: center;
    color: black;
    display: flex;
    justify-content: center;
    align-items: center;
     font-size: 30rpx;
}
