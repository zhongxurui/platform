.bottom {
    width: 100%;
    height: 130rpx;
    position: fixed;
    bottom: 0;
    z-index: 100;
}

.bottom_bg {
    height: 100rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: black;
    opacity: 0.1;
}

.bottom_btn {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom_btn .bottm_index {
    width: 33.3%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottm_index  view {
    text-align: center;
    width: 200rpx;
}

.bottm_index  view text {
    /* display: block; */
    font-size: 28rpx;
    color: black;
    width: 84rpx;
    font-weight: 900rpx;
}

.bottm_index view image {
    width: 84rpx;
    height: 85rpx;
    display: block;
    margin: 0 auto;
    /* position: absolute; */
    z-index: 100;
}

.btn {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.gowxMin {
    /* border: 1px solid red; */
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
